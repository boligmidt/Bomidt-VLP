{
	"compilerOptions": {
		"target": "es2017",
		"allowSyntheticDefaultImports": false,
		"baseUrl": "./",
		"paths": {
			"api/*": [
				"src/api/*"
			],
			"server/*": [
				"src/server/*"
			],
			"components/*": [
				"src/components/*"
			],
			"assets/*": [
				"src/assets/*"
			],
			"web/*": [
				"src/web/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}